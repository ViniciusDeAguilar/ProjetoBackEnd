    "paths": { 
        "/ficha": {
            "get": {
                "description": "Retorna lista das fichas cadastradas",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ficha"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ficha/{id}": {
            "get": {
                "description": "consulta a ficha pelo ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ficha encontrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ficha"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "description": "Atualiza uma ficha",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "jogando": {
                                        "type": "boolean",
                                        "example": true
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Ficha atualizada"
                    },
                    "404": {
                        "description": "Ficha n達o encontrada"
                    }
                }
            }
        },
